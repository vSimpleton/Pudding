<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.activity.MainActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <com.pomelo.pudding.ui.widget.RoundedImageView
        android:id="@+id/iv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/image_test"
        app:oval="true" />

    <com.pomelo.pudding.ui.widget.CustomFlowLayout
        android:id="@+id/flowLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_below="@+id/iv"/>

    <RadioGroup
        android:id="@+id/rgSex"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp">

        <com.pomelo.pudding.ui.widget.CustomRadioButton
            android:id="@+id/rbBoy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/register_sex_boy_bg"
            android:button="@null"
            android:drawableLeft="@drawable/register_boy_selector"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="男生"
            android:textColor="@color/sex_boy_selector"
            android:textSize="17dp" />

        <com.pomelo.pudding.ui.widget.CustomRadioButton
            android:id="@+id/rbGirl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/register_sex_girl_bg"
            android:button="@null"
            android:drawableLeft="@drawable/register_girl_selector"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="女生"
            android:textColor="@color/sex_boy_selector"
            android:textSize="17dp" />

    </RadioGroup>

</RelativeLayout>